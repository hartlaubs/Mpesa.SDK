    <Company>Hartlaubs</Company>
    <Copyright>Copyright 2020</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/hartlaubs/Mpesa.SDK</RepositoryUrl>
